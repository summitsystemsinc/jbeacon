<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
    <bean id="beacon" class="com.summit.jbeacon.beacons.MultiCastResourceBeacon"
    init-method="startListening" destroy-method="stopListening">
        <property name="hostName" value="127.0.0.1" />
        <property name="listenPort" value="6233" />
        <property name="broadcastText" value="jbeacon_test" />
    </bean>
</beans>